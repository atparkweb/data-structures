{
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "./src/**/*.spec.ts"],
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "./build",
    "baseUrl": "./src",
    "paths": {
      "@project/*": ["./*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
